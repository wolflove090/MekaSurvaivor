.weapon-upgrade-root {
    flex-grow: 1;
    justify-content: center;
    align-items: center;
    padding-left: 3%;
    padding-right: 3%;
    padding-top: 4%;
    padding-bottom: 4%;
    background-color: rgba(0, 0, 0, 0.35);
}

.upgrade-cards-container {
    width: 100%;
    max-width: 1400px;
    flex-direction: row;
    justify-content: center;
    align-items: stretch;
    gap: 2%;
}

.upgrade-card {
    flex-grow: 1;
    flex-shrink: 1;
    flex-basis: 0;
    min-width: 0;
    max-width: 420px;
    min-height: 340px;
    padding: 20px;
    border-top-left-radius: 14px;
    border-top-right-radius: 14px;
    border-bottom-left-radius: 14px;
    border-bottom-right-radius: 14px;
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
    border-left-color: rgba(255, 255, 255, 0.3);
    border-right-color: rgba(255, 255, 255, 0.3);
    border-top-color: rgba(255, 255, 255, 0.3);
    border-bottom-color: rgba(255, 255, 255, 0.3);
    background-color: rgba(20, 24, 30, 0.92);
    color: rgb(240, 244, 250);
    justify-content: flex-start;
    align-items: flex-start;
}

.upgrade-card:hover {
    border-left-color: rgb(255, 209, 102);
    border-right-color: rgb(255, 209, 102);
    border-top-color: rgb(255, 209, 102);
    border-bottom-color: rgb(255, 209, 102);
    background-color: rgba(28, 34, 44, 0.95);
}

.upgrade-card-title {
    -unity-font-style: bold;
    font-size: 20px;
    margin-bottom: 8px;
    white-space: normal;
}

.upgrade-card-description {
    font-size: 14px;
    color: rgba(230, 236, 245, 0.85);
    white-space: normal;
}
